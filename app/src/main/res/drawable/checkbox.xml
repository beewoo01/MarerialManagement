<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#c4cbd2" />
                    <solid android:color="#fff" />
                </shape>
            </item>


            <item android:width="20dp" android:height="20dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>

            <item android:width="7dp" android:height="2dp" android:start="3.5dp" android:top="10dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/font_deep_gray_color" />
                    </shape>
                </rotate>
            </item>

            <item android:width="11dp" android:height="2dp" android:start="7dp" android:top="8dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/font_deep_gray_color" />
                    </shape>
                </rotate>
            </item>

        </layer-list>


    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#c4cbd2" />
                    <solid android:color="#fff" />
                </shape>
            </item>


            <item android:width="20dp" android:height="20dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>


        </layer-list>


    </item>


</selector>